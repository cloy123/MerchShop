<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.MerchShop.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="card_layout_textViews">
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="card_layout_buttons">
        <item name="android:textSize">@dimen/medium_text</item>
        <item name="android:textColor">?attr/colorSecondary</item>
        <item name="android:background">@drawable/oval_button_light_ripple</item>
        <item name="android:stateListAnimator">@null</item>
    </style>

    <style name="ThemeOverlay.AppTheme.TextInputEditText.Outlined" parent="">
        <item name="colorPrimary">@color/black</item>
        <item name="colorControlActivated">@color/black</item>
    </style>

    <style name="TextAppearance.MerchShop.Toolbar" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:textSize">16sp</item>
    </style>
</resources>