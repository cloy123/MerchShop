<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".presentation.events.FinishEventFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/participants_recycler"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bt_finish"
        android:layout_marginHorizontal="@dimen/medium_horizontal_margin"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


    <Button
        android:layout_gravity="center"
        android:text="Отметить"
        android:id="@+id/bt_finish"
        android:layout_width="wrap_content"
        android:layout_marginHorizontal="20dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="@drawable/oval_button_dark_ripple"
        android:stateListAnimator="@null"
        android:textColor="?attr/colorSecondary"/>

</androidx.constraintlayout.widget.ConstraintLayout>